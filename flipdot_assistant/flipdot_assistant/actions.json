{
    "manifest": {
        "displayName": "flipdot",
        "invocationName": "flipdot",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.briggysmalls.actions.show_message",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.briggysmalls.intents.show_message",
                "parameters": [
                    {
                        "name": "text",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "flip the message $SchemaOrg_Text:text"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Transcribing your message"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.briggysmalls.commands.show_message",
                                    "params": {
                                        "message": "$text"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.briggysmalls.actions.show_weather",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.briggysmalls.intents.show_weather",
                "parameters": [
                    {
                        "name": "location",
                        "type": "SchemaOrg_Place"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "flip the weather (in $SchemaOrg_Place:location)?"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Showing you the weather"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.briggysmalls.commands.show_weather",
                                    "params": {
                                        "location": "$location"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.briggysmalls.actions.show_clock",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.briggysmalls.intents.show_clock",
                "trigger": {
                    "queryPatterns": [
                        "Flip the time"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Showing you the time"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.briggysmalls.commands.show_time"
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.briggysmalls.actions.power_lights",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.briggysmalls.intents.power_lights",
                "parameters": [
                    {
                        "name": "lighting",
                        "type": "LightingOptions"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Turn sign $LightingOptions:lighting"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Turning sign $lighting"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.briggysmalls.commands.power_lights",
                                    "params": {
                                        "lighting": "$lighting"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
    "types": [
        {
            "name": "$LightingOptions",
            "entities": [
                {
                    "key": "ON",
                    "synonyms": [
                        "on"
                    ]
                },
                {
                    "key": "OFF",
                    "synonyms": [
                        "off"
                    ]
                }
            ]
        }
    ]
}
